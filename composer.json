{
    "name": "thecodeassassin/soul-soldiers",
    "description": "Soul-Soldiers Website",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Stephen Hoogendijk",
            "email": "stephen@tca0.nl"
        }
    ],
    "require": {
        "php": ">=5.4",
        "phalcon/incubator": "dev-master",
        "binarybeast/stable": "dev-master",
        "mrclay/minify": "2.*",
        "ext-phalcon" : ">=1.2.4",
        "ext-mcrypt" : "*",
        "ext-mysql" : "*",
        "ext-pdo_mysql" : "*",
        "ext-memcached" : "*",
        "ext-memcache" : "*",
        "swiftmailer/swiftmailer" : "5.0.*"
    },
    "repositories": [
        {
            "url": "https://github.com/phalcon/incubator",
            "type": "package",
            "package": {
                "name": "phalcon/incubator",
                "version": "dev-master",
                "source": {
                    "url": "https://github.com/phalcon/incubator",
                    "type": "git",
                    "reference": "master"
                }
            },
            "autoload": {
                "classmap": ["/Library/Phalcon"]
            }
        },
        {
            "url": "https://github.com/thecodeassassin/BinaryBeast_API_PHP.git",
            "type": "package",
            "package": {
                "name": "binarybeast/stable",
                "version": "dev-master",
                "source": {
                    "url": "https://github.com/thecodeassassin/BinaryBeast_API_PHP.git",
                    "type": "git",
                    "reference": "master"
                },
                "autoload": {
                    "classmap": ["lib/", "BinaryBeast.php"]
                }
            }
        }

    ],
    "scripts": {
        "post-install-cmd": [

        ],
        "post-update-cmd": [

        ]
    },
    "autoload": {
        "psr-0" : {
            "Soul"    :   "app/src",
            "Phalcon" :   "vendor/phalcon/incubator/Library"
        }
    }
}
